body, h1, h2, h3, h4, h5, h6, a, p, li, ul
    font-family font-principal !important

h1, h2, h3, h4 
    color #ffffff
    font-weight 700
    text-shadow 0 5px 10px rgba(9,5,56,0.9)

body
    background url('../img/background.jpg') top center repeat-y
    background-attachment fixed
    background-size 100% auto

.asteroids
    background url('../img/asteroids.png') top center repeat-y
    background-size 100% auto

.section-container
    display block
    margin 0 auto
    max-width 1100px

.content
    margin-bottom 150px

    h2, h3, h4
        margin 50px 0 20px 0

    .title
        margin 100px 0
        text-align center