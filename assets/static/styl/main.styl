h1
    padding 80px 0 50px
    text-shadow 0 5px 10px rgba(rgb-primary,.9)
    span 
        color color-text-primary
        display block
        font-size 40px
        font-weight 800
        text-align right

.whale-background
    background url('../img/whale.png') left bottom no-repeat
    background-size auto
    margin auto
    max-width 1500px


.title-intro
    margin 50px auto
    position relative
    img
        width 100%
    .intro-container
        position absolute
        text-align center
        top 52%
        width 100%
        h2 
            color color-text-primary
            display inline-block
            font-size 30px
            font-weight 700
            text-align left
            text-shadow 0 5px 10px rgba(rgb-primary,.9)
            margin auto
            span
                display block
                font-size 45px

.text-container
    color color-text-primary
    p
        font-size 52px
        font-weight 700
        text-align right 
        text-shadow 0 5px 10px rgba(rgb-primary,.9)
        padding 150px 0 130px
        span
            display block
            font-size 32px
            font-weight 600
.planet-pink
    padding 0 0 150px
    width 100%


.soon-title
    color color-text-primary
    font-size 48px
    font-weight 700
    text-align center
    text-shadow 0 5px 10px rgba(rgb-primary,.9)
    padding 200px 0 180px

footer
    .social-container
        text-align center
        a
            .social-icon
                background color-white
                border-radius 100px
                color color-accent
                display inline-block
                height 40px
                margin 0 20px
                padding 5px
                width 40px
    p
        color color-text-primary
        font-size 21px
        font-weight 300
        text-align center
        padding 80px 0 70px
        text-shadow 0 5px 10px rgba(rgb-primary,.9)
    
    a
        color color-text-primary





@media (max-width 991px)

    h1
        span 
            font-size 30px

    .whale-background
        background-size 70%

    .title-intro
        .intro-container
            h2
                font-size 25px
                margin-left 5%
                span
                    font-size 40px

    .text-container
        p
            font-size 47px
            span
                font-size 27px

    .soon-title
        font-size 38px

    footer
        p
            font-size 16px


@media (max-width 767px)
    h1
        span 
            font-size 25px
            font-weight bold

    .whale-background
        background-size contain

    .text-container
        p
            font-size 29px
            padding 50px 0
            span
                font-size 23px
                font-weight light
    
    .planet-pink
        padding 0 0 170px
    
    .planet-pink
        opacity 0
        visibility hidden

    .soon-title
        font-size 27px
        font-weight bold
        margin-top -20px
        padding 110px 0

    footer
        .social-container
            a
                .social-icon
                    margin-bottom 15px
        p
            font-size 16px